<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/de_bg"

    tools:context=".YearFragment">


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="15dp"
        >



    </com.github.mikephil.charting.charts.BarChart>


    <LinearLayout
        android:id="@+id/linearYColorTitle"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd = "true"
        android:layout_below="@id/barChart"
        android:layout_marginRight="30dp"
        android:layout_height="30dp">

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#E11446F0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:text="支出"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#E4B388FF"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"

            android:textColor="#000000"
            android:text="收入"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linerYDateChoose"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/linearYColorTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TvYEARFragYearTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="2019年"
            android:textColor="#000000"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/imaTip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/TvYEARFragYearTitle"
            android:background="@mipmap/anti_ang" />

    </LinearLayout>



</RelativeLayout>
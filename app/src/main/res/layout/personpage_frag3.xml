<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/de_bg"
    tools:context=".Fragment3_personalCenter">


    <LinearLayout
        android:id="@+id/linearbase"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "20dp"
        android:layout_marginTop = "90dp"
        android:layout_marginRight = "20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/headimage"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >




            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="evan"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />


            <TextView
                android:id="@+id/tvUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="uId:  1" />

        </LinearLayout>






        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:contentDescription="@string/nav_header_desc"-->
            <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->
            <!--android:src="@drawable/h1" />-->


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft = "20dp"
        android:layout_marginRight = "20dp"
        android:layout_below="@+id/linearbase"
        >


        <LinearLayout
            android:id="@+id/linerPC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tiantianquan"
                android:layout_marginRight="15dp"

                />

            <TextView
                android:id="@+id/tvpcEdit"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/toright"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/linerSB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bangbing"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/tvSqlBac"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="数据备份"
                android:textSize="20dp"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/toright"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linerQuit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chip"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/tvQuit"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text="退出账号"
                android:textSize="20dp"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/toright"
                />

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>